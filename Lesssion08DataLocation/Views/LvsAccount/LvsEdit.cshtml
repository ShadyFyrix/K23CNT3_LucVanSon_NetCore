    @model LvsCoreMVC.LvsModels.LvsAccount

    @{
        ViewData["Title"] = "Chỉnh sửa tài khoản";
    }

    <h1>Chỉnh sửa tài khoản</h1>

    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="LvsEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="LvsId" />

                <div class="form-group">
                    <label asp-for="LvsFullName" class="control-label"></label>
                    <input asp-for="LvsFullName" class="form-control" />
                    <span asp-validation-for="LvsFullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LvsEmail" class="control-label"></label>
                    <input asp-for="LvsEmail" class="form-control" />
                    <span asp-validation-for="LvsEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LvsPhone" class="control-label"></label>
                    <input asp-for="LvsPhone" class="form-control" />
                    <span asp-validation-for="LvsPhone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LvsAddress" class="control-label"></label>
                    <input asp-for="LvsAddress" class="form-control" />
                    <span asp-validation-for="LvsAddress" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LvsAvatar" class="control-label"></label>
                    <input asp-for="LvsAvatar" class="form-control" />
                    <span asp-validation-for="LvsAvatar" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LvsBirthday" class="control-label"></label>
                    <input asp-for="LvsBirthday" type="date" class="form-control" />
                    <span asp-validation-for="LvsBirthday" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LvsGender" class="control-label"></label>
                    <select asp-for="LvsGender" class="form-control">
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                        <option value="Khác">Khác</option>
                    </select>
                    <span asp-validation-for="LvsGender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LvsPassword" class="control-label"></label>
                    <input asp-for="LvsPassword" type="password" class="form-control" />
                    <span asp-validation-for="LvsPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LvsFacebook" class="control-label"></label>
                    <input asp-for="LvsFacebook" class="form-control" />
                    <span asp-validation-for="LvsFacebook" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                    <a asp-action="LvsIndex" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>