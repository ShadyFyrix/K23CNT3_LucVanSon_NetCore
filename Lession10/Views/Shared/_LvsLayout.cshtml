<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lession10</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Lession10.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<style>
    /* Shared Post Styles */
    .post-card {
        border-radius: 0.75rem;
        overflow: hidden;
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }

        .post-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

    .post-card-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }

    .post-card-body {
        padding: 1.5rem;
    }

    .post-form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .post-image-preview {
        max-height: 300px;
        object-fit: contain;
        border-radius: 0.5rem;
        border: 1px solid #dee2e6;
        transition: all 0.3s ease;
    }

        .post-image-preview:hover {
            transform: scale(1.02);
        }

    .post-content {
        line-height: 1.7;
        white-space: pre-wrap;
    }

    .action-buttons .btn {
        min-width: 100px;
        transition: all 0.2s ease;
    }

    .status-badge {
        font-size: 0.85rem;
        padding: 0.35rem 0.65rem;
        font-weight: 500;
    }

    /* Animation for alerts */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .alert-animated {
        animation: fadeIn 0.3s ease forwards;
    }

    /* Smooth transitions for form elements */
    .form-control, .form-select {
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    /* Table improvements */
    .post-table {
        --bs-table-bg: transparent;
        --bs-table-striped-bg: rgba(0, 0, 0, 0.01);
    }

        .post-table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            color: #6c757d;
        }

        .post-table tr {
            transition: all 0.2s ease;
        }

            .post-table tr:hover {
                background-color: rgba(13, 110, 253, 0.03) !important;
            }

    /* Image thumbnail in table */
    .table-img-thumbnail {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 0.35rem;
        transition: all 0.3s ease;
    }

        .table-img-thumbnail:hover {
            transform: scale(2.5);
            z-index: 100;
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
        }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .post-card-body {
            padding: 1rem;
        }

        .action-buttons .btn {
            min-width: auto;
            padding: 0.375rem 0.75rem;
        }
    }

</style>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="LvsHome" asp-action="LvsIndex">Lession10</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="LvsHome" asp-action="LvsIndex">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="LvsHome" asp-action="LvsAbout">About</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="LvsPosts" asp-action="LvsIndex">Content</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Lession10 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
