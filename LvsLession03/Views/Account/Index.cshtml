@{
    ViewData["Title"] = "Index";
    var accounts = ViewBag.Accounts as List<Account>; // Strongly type the ViewBag
}
<div class="row">
    @foreach (var item in accounts)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@item.Avatar" alt="@item.Name's avatar" style="width:50%" />
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>@item.Bio</p>
                    <p>
                        <a asp-controller="Account"
                           asp-action="Profile"
                           asp-route-id="@item.Id"
                           class="btn btn-success btn-block">
                            View Profile
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>