@model LucVanSon_231090087_Net.Models.LvsEmployee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="mb-8">
    <h1 class="text-3xl font-bold text-primary mb-2">Delete Employee</h1>
    <p class="text-gray-600 dark:text-gray-400">Are you sure you want to delete this employee?</p>
</div>

<div class="card fade-in">
    <div class="space-y-6">
        <div class="bg-red-50 dark:bg-red-900/10 border-l-4 border-red-500 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <sl-icon name="exclamation-triangle" class="text-red-500"></sl-icon>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800 dark:text-red-200">Warning</h3>
                    <div class="mt-2 text-sm text-red-700 dark:text-red-300">
                        <p>This action cannot be undone. This will permanently remove the employee record from the system.</p>
                    </div>
                </div>
            </div>
        </div>

        <h3 class="text-xl font-semibold">Employee Details</h3>

        <dl class="space-y-4">
            <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Employee Name</dt>
                <dd class="mt-1">@Html.DisplayFor(model => model.LvsEmpName)</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Start Date</dt>
                <dd class="mt-1">@Model.LvsEmpStartDate.ToString("MMMM dd, yyyy")</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Status</dt>
                <dd class="mt-1">
                    <sl-badge variant="@(Model.LvsEmpStats ? "success" : "neutral")" pill>
                        @(Model.LvsEmpStats ? "Show" : "Hide")
                    </sl-badge>
                </dd>
            </div>
        </dl>

        <form asp-action="LvsDelete" class="flex items-center gap-4">
            <input type="hidden" asp-for="LvsEmpId" />
            <button type="submit" class="btn btn-danger">
                <sl-icon name="trash" class="mr-2"></sl-icon> Delete Permanently
            </button>
            <a asp-action="LvsIndex" class="btn btn-outline">
                <sl-icon name="arrow-left" class="mr-2"></sl-icon> Cancel
            </a>
        </form>
    </div>
</div>