@model IEnumerable<LvsLab06.Models.LvsEmployee>

@{
    ViewData["Title"] = "Employee Management";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Employee List</h6>
        <a asp-action="LvsCreate" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle"></i> Add New
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Birthday</th>
                        <th>Contact</th>
                        <th>Salary</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.LvsId)</td>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.LvsName)</strong>
                                <div class="text-muted small">@item.LvsEmail</div>
                            </td>
                            <td>@item.LvsBirthDay.ToString("MMM dd, yyyy")</td>
                            <td>@item.LvsPhone</td>
                            <td>@item.LvsSalary.ToString("C0")</td>
                            <td>
                                @if (item.LvsStatus)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Inactive</span>
                                }
                            </td>
                            <td class="text-center action-buttons">
                                <a asp-action="LvsEdit" asp-route-id="@item.LvsId" class="btn btn-sm btn-warning"
                                   data-toggle="tooltip" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="LvsDelete" asp-route-id="@item.LvsId"
                                   class="btn btn-sm btn-danger" data-toggle="tooltip" title="Delete"
                                   onclick="return confirm('Are you sure you want to delete this employee?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}