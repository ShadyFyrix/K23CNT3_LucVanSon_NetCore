@model LvsLab06.Models.LvsEmployee

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="card shadow">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
    </div>
    <div class="card-body">
        <form asp-action="LvsEditPUT" class="needs-validation" novalidate>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="LvsId" class="form-label">Employee ID</label>
                        <input asp-for="LvsId" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LvsName" class="form-label">Full Name</label>
                        <input asp-for="LvsName" class="form-control" required />
                        <div class="invalid-feedback">Please provide the employee's name.</div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LvsBirthDay" class="form-label">Birthday</label>
                        <input asp-for="LvsBirthDay" type="date" class="form-control" required />
                        <div class="invalid-feedback">Please select a valid date.</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="LvsEmail" class="form-label">Email</label>
                        <input asp-for="LvsEmail" type="email" class="form-control" required />
                        <div class="invalid-feedback">Please provide a valid email address.</div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LvsPhone" class="form-label">Phone</label>
                        <input asp-for="LvsPhone" class="form-control" required />
                        <div class="invalid-feedback">Please provide a phone number.</div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LvsSalary" class="form-label">Salary</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="LvsSalary" type="number" class="form-control" required />
                        </div>
                        <div class="invalid-feedback">Please provide a valid salary amount.</div>
                    </div>

                    <div class="form-group form-switch mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="LvsStatus" />
                        <label class="form-check-label" asp-for="LvsStatus">Active Employee</label>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Save Changes
                </button>
                <a asp-action="LvsIndex" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Client-side validation
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}