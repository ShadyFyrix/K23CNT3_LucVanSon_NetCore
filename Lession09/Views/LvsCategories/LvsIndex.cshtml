@model IEnumerable<Lession09.Models.Category>

@{
    ViewData["Title"] = "Categories List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="LvsCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-action="LvsEdit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a asp-action="LvsDetails" asp-route-id="@item.CategoryId">Details</a> |
                    <a asp-action="LvsDelete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>